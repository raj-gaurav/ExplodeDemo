<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:background="@drawable/img_bg">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:transitionName="imgTransition"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="71dp"
            android:src="@drawable/guarav"
            app:civ_border_color="#FAF8D9"
            app:civ_border_width="4dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="118dp"
            android:layout_marginTop="55dp"
            android:transitionName="nameTransition"
            android:text="Gaurav Raj"
            android:textColor="#000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="117dp"
            android:layout_marginTop="84dp"
            android:transitionName="tagTransition"
            android:text="UI/UX Designer | Developer" />


    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="14dp"
        android:background="#FAE96D"
        android:src="@drawable/downloa" />

    <RelativeLayout
        android:layout_width="68dp"
        android:layout_height="263dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="169dp"

        android:background="@drawable/layout_bg">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="35dp"
            android:layout_height="38dp"
            android:padding="5dp"
            android:transitionName="about"
            android:background="@drawable/custom_ripple_with_border"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/about" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="37dp"
            android:layout_height="38dp"
            android:padding="5dp"
            android:transitionName="projects"
            android:background="@drawable/custom_ripple_with_border"
            android:layout_alignStart="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            app:srcCompat="@drawable/project" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="35dp"
            android:layout_height="41dp"
            android:padding="5dp"
            android:transitionName="contact"
            android:background="@drawable/custom_ripple_with_border"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="202dp"
            app:srcCompat="@drawable/contact" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="35dp"
            android:layout_height="43dp"
            android:padding="5dp"
            android:transitionName="suggestion"
            android:background="@drawable/custom_ripple_with_border"
            android:layout_above="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-184dp"
            app:srcCompat="@drawable/suggestion" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="306dp"
        android:layout_height="420dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="214dp"
        android:padding="8dp"
        android:id="@+id/rel_border"
        android:background="@drawable/layout_border"
        >


        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="0dp"
            android:text="About Me"
            android:paddingBottom="3dp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="295dp"
            android:layout_height="122dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="19dp"
            android:paddingTop="8dp"
            android:text="@string/about" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/layout_bg"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="This is made only for a testing purpose." />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="\u00a92019, Gaurav" />
    </LinearLayout>


</RelativeLayout>